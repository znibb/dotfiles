# general
alias vim='nvim'
alias ..='cd ..'
alias grep='grep --color=auto'
alias psa='ps aux'
alias psg='ps aux | grep -v grep | grep '

# config shortcuts
alias cfa='nvim ~/.config/zsh/.aliases'
alias cfs='nvim ~/.config/sway/config'
alias cft='nvim ~/.config/tmux/.tmux.conf'
alias cfv='nvim ~/.config/nvim/init.lua'

# dotfiles shortcuts
alias  df='cd ~/.dotfiles'
alias dfp='cd ~/.dotfiles/packages'
alias dfz='cd ~/.dotfiles/zsh'

# ls
alias  l='ls -lah --group-directories-first --color=auto'
alias la='ls -ah --group-directories-first --color=auto'
alias ls='ls -h --group-directories-first --color=auto'

# docker
alias  dc='docker compose'
alias dcl='docker compose logs -f'
alias dcr='docker compose up -d --force-recreate'

# git
alias  g='git'
alias ga='git add'
alias gc='git commit'
alias gd='git diff'
alias gs='git status'
alias gp='git pull'
alias gP='git push'
alias lg='lazygit'

# tmux
alias tma='tmux attach -t '
alias tmk='tmux kill-session -t '
alias tml='tmux tmux ls'
alias tmn='tmux new -s '
alias tmr='tmux rename-session -t '

# helper functions
mcd () {
  mkdir -v "$1"
  cd "$1"
}
